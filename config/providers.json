{
  "sendgrid": {
    "api_key": "${SENDGRID_API_KEY}",
    "from_email": "${SENDGRID_FROM_EMAIL}",
    "from_name": "${FROM_NAME}",
    "dedicated_ip": "${SENDGRID_DEDICATED_IP}",
    "daily_limit": 10000,
    "hourly_limit": 1000,
    "weight": 0.5,
    "priority": 1,
    "reputation_threshold": 0.85,
    "features": {
      "tracking": true,
      "analytics": true,
      "dedicated_ip": true,
      "ip_warming": true
    },
    "optimization": {
      "best_for_domains": ["gmail.com", "yahoo.com"],
      "time_zones": ["US/Eastern", "US/Central", "US/Mountain", "US/Pacific"],
      "send_time_optimization": true
    }
  },
  "aws_ses": {
    "region": "${AWS_REGION}",
    "access_key": "${AWS_ACCESS_KEY_ID}",
    "secret_key": "${AWS_SECRET_ACCESS_KEY}",
    "from_email": "${SES_FROM_EMAIL}",
    "from_name": "${FROM_NAME}",
    "daily_limit": 50000,
    "hourly_limit": 14,
    "weight": 0.3,
    "priority": 2,
    "reputation_threshold": 0.80,
    "features": {
      "tracking": true,
      "analytics": true,
      "dedicated_ip": false,
      "ip_warming": false
    },
    "optimization": {
      "best_for_domains": ["gmail.com", "googlemail.com", "corporate.com"],
      "time_zones": ["US/Eastern", "Europe/London"],
      "send_time_optimization": true
    }
  },
  "postmark": {
    "server_token": "${POSTMARK_SERVER_TOKEN}",
    "api_key": "${POSTMARK_API_KEY}",
    "from_email": "${POSTMARK_FROM_EMAIL}",
    "from_name": "${FROM_NAME}",
    "daily_limit": 10000,
    "hourly_limit": 500,
    "weight": 0.2,
    "priority": 3,
    "reputation_threshold": 0.90,
    "features": {
      "tracking": true,
      "analytics": true,
      "dedicated_ip": false,
      "ip_warming": false
    },
    "optimization": {
      "best_for_domains": ["outlook.com", "hotmail.com", "live.com"],
      "time_zones": ["US/Eastern", "US/Pacific"],
      "send_time_optimization": true
    }
  },
  "global_settings": {
    "max_retries": 3,
    "retry_delay": 300,
    "failover_threshold": 0.75,
    "reputation_update_interval": 3600,
    "health_check_interval": 300,
    "load_balancing": {
      "strategy": "weighted_round_robin",
      "consider_engagement": true,
      "consider_domain": true,
      "consider_time_zone": true
    },
    "rate_limiting": {
      "global_hourly_limit": 2000,
      "global_daily_limit": 25000,
      "per_domain_limit": 100,
      "burst_protection": true
    }
  }
}
