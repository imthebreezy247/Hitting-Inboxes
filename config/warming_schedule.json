{
  "warming_profiles": {
    "conservative": {
      "name": "Conservative 45-day warming",
      "duration_days": 45,
      "target_volume": 3000,
      "description": "Slow and steady warming for maximum deliverability"
    },
    "standard": {
      "name": "Standard 30-day warming", 
      "duration_days": 30,
      "target_volume": 3000,
      "description": "Balanced approach for most use cases"
    },
    "aggressive": {
      "name": "Aggressive 21-day warming",
      "duration_days": 21,
      "target_volume": 3000,
      "description": "Faster warming for experienced senders"
    }
  },
  "active_profile": "standard",
  "schedule": {
    "week_1": {
      "description": "Most engaged subscribers only",
      "days": [
        {"day": 1, "volume": 50, "segment": "most_engaged", "hourly_limit": 20, "engagement_threshold": 0.9},
        {"day": 2, "volume": 100, "segment": "most_engaged", "hourly_limit": 30, "engagement_threshold": 0.9},
        {"day": 3, "volume": 150, "segment": "most_engaged", "hourly_limit": 40, "engagement_threshold": 0.9},
        {"day": 4, "volume": 200, "segment": "highly_engaged", "hourly_limit": 50, "engagement_threshold": 0.8},
        {"day": 5, "volume": 300, "segment": "highly_engaged", "hourly_limit": 70, "engagement_threshold": 0.8},
        {"day": 6, "volume": 400, "segment": "highly_engaged", "hourly_limit": 90, "engagement_threshold": 0.8},
        {"day": 7, "volume": 500, "segment": "engaged", "hourly_limit": 100, "engagement_threshold": 0.7}
      ]
    },
    "week_2": {
      "description": "Expand to engaged subscribers",
      "days": [
        {"day": 8, "volume": 600, "segment": "engaged", "hourly_limit": 120, "engagement_threshold": 0.7},
        {"day": 9, "volume": 750, "segment": "engaged", "hourly_limit": 150, "engagement_threshold": 0.7},
        {"day": 10, "volume": 900, "segment": "engaged", "hourly_limit": 180, "engagement_threshold": 0.6},
        {"day": 11, "volume": 1100, "segment": "moderately_engaged", "hourly_limit": 220, "engagement_threshold": 0.5},
        {"day": 12, "volume": 1300, "segment": "moderately_engaged", "hourly_limit": 260, "engagement_threshold": 0.5},
        {"day": 13, "volume": 1500, "segment": "moderately_engaged", "hourly_limit": 300, "engagement_threshold": 0.4},
        {"day": 14, "volume": 1700, "segment": "moderately_engaged", "hourly_limit": 340, "engagement_threshold": 0.4}
      ]
    },
    "week_3": {
      "description": "Approaching target volume",
      "days": [
        {"day": 15, "volume": 1900, "segment": "all_active", "hourly_limit": 380, "engagement_threshold": 0.3},
        {"day": 16, "volume": 2100, "segment": "all_active", "hourly_limit": 420, "engagement_threshold": 0.3},
        {"day": 17, "volume": 2300, "segment": "all_active", "hourly_limit": 460, "engagement_threshold": 0.2},
        {"day": 18, "volume": 2500, "segment": "all_active", "hourly_limit": 500, "engagement_threshold": 0.2},
        {"day": 19, "volume": 2700, "segment": "all_active", "hourly_limit": 540, "engagement_threshold": 0.1},
        {"day": 20, "volume": 2900, "segment": "all_active", "hourly_limit": 580, "engagement_threshold": 0.1},
        {"day": 21, "volume": 3000, "segment": "all_active", "hourly_limit": 600, "engagement_threshold": 0.0}
      ]
    },
    "week_4_plus": {
      "description": "Full volume with optimization",
      "default": {
        "volume": 3000,
        "segment": "all_active", 
        "hourly_limit": 600,
        "engagement_threshold": 0.0,
        "optimization_enabled": true
      }
    }
  },
  "segment_definitions": {
    "most_engaged": {
      "min_engagement_score": 0.9,
      "min_opens_last_30_days": 10,
      "max_days_since_last_open": 7,
      "min_clicks_last_30_days": 3,
      "exclude_bounces": true,
      "exclude_complaints": true
    },
    "highly_engaged": {
      "min_engagement_score": 0.7,
      "min_opens_last_30_days": 5,
      "max_days_since_last_open": 14,
      "min_clicks_last_30_days": 1,
      "exclude_bounces": true,
      "exclude_complaints": true
    },
    "engaged": {
      "min_engagement_score": 0.5,
      "min_opens_last_30_days": 2,
      "max_days_since_last_open": 30,
      "min_clicks_last_30_days": 0,
      "exclude_bounces": true,
      "exclude_complaints": true
    },
    "moderately_engaged": {
      "min_engagement_score": 0.3,
      "min_opens_last_30_days": 1,
      "max_days_since_last_open": 60,
      "exclude_bounces": true,
      "exclude_complaints": true
    },
    "all_active": {
      "min_engagement_score": 0.0,
      "max_days_since_last_open": 180,
      "exclude_bounces": true,
      "exclude_complaints": true,
      "status": "active"
    }
  },
  "monitoring": {
    "success_thresholds": {
      "delivery_rate": 0.95,
      "open_rate": 0.15,
      "click_rate": 0.02,
      "bounce_rate": 0.05,
      "complaint_rate": 0.001
    },
    "warning_thresholds": {
      "delivery_rate": 0.90,
      "open_rate": 0.10,
      "click_rate": 0.01,
      "bounce_rate": 0.08,
      "complaint_rate": 0.002
    },
    "actions": {
      "pause_warming": {
        "bounce_rate_above": 0.10,
        "complaint_rate_above": 0.003,
        "delivery_rate_below": 0.85
      },
      "reduce_volume": {
        "bounce_rate_above": 0.08,
        "complaint_rate_above": 0.002,
        "delivery_rate_below": 0.90
      },
      "switch_provider": {
        "consecutive_failures": 5,
        "reputation_below": 0.70
      }
    }
  }
}
